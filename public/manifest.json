{
  "manifest_version": 3,
  "name": "Aura Spark",
  "version": "1.0.0",
  "description": "Aura Spark AI Assistant",
  "permissions": ["activeTab", "contextMenus", "storage", "sidePanel"],
  "host_permissions": ["https://api.groq.com/*"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Aura Spark"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/index.css"]
    }
  ]
}